<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_lights_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fata(off)"/>

        <Button
            android:id="@+id/button_lights_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spate(off)"/>

        <Button
            android:id="@+id/button_horn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Claxon(off)"/>

        <SeekBar
            android:id="@+id/seekbar_speed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:max="100"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_forward"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:text="Inainte"/>

            <Button
                android:id="@+id/button_backward"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:text="Inapoi"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_center_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_arrow_00"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/blue_nv"/>

                <ImageView
                    android:id="@+id/imageview_arrow_01"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/blue_n"/>

                <ImageView
                    android:id="@+id/imageview_arrow_02"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/blue_ne"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_center_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_arrow_10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/blue_v"/>

                <ImageView
                    android:id="@+id/imageview_arrow_11"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>

                <ImageView
                    android:id="@+id/imageview_arrow_12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/blue_e"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_center_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_arrow_20"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/blue_sv"/>

                <ImageView
                    android:id="@+id/imageview_arrow_21"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/blue_s"/>

                <ImageView
                    android:id="@+id/imageview_arrow_22"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/blue_se"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_connect"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:text="Connect"/>

                <Button
                    android:id="@+id/button_open"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:text="ON"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_left"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:text="Stanga"/>

            <Button
                android:id="@+id/button_right"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:text="Dreapta"/>
            <TextView
                android:id="@+id/textview_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,1"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>