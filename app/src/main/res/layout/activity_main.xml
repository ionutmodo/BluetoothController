<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_lights_front"
            android:layout_width="@dimen/size_lights_horn_width"
            android:layout_height="@dimen/size_lights_horn_height"
            android:text="FRONT(OFF)" />

        <Button
            android:id="@+id/button_lights_back"
            android:layout_width="@dimen/size_lights_horn_width"
            android:layout_height="@dimen/size_lights_horn_height"
            android:text="BACK(OFF)"/>

        <Button
            android:id="@+id/button_horn"
            android:layout_width="@dimen/size_lights_horn_width"
            android:layout_height="@dimen/size_lights_horn_height"
            android:text="HORN(OFF)"/>

        <SeekBar
            android:id="@+id/seekbar_speed"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:indeterminateDrawable="@android:drawable/progress_horizontal"
            android:indeterminateOnly="false"
            android:max="100"
            android:maxHeight="50dp"
            android:minHeight="5dp"
            android:progressDrawable="@android:drawable/progress_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_forward"
                android:layout_width="@dimen/size_front_back_width"
                android:layout_height="@dimen/size_front_back_width"
                android:text="FRONT"/>

            <Button
                android:id="@+id/button_backward"
                android:layout_width="@dimen/size_front_back_width"
                android:layout_height="@dimen/size_front_back_width"
                android:text="BACK"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_center_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_arrow_00"
                    android:layout_width="@dimen/size_arrows_width"
                    android:layout_height="@dimen/size_arrows_height"
                    android:src="@drawable/blue_nv"/>

                <ImageView
                    android:id="@+id/imageview_arrow_01"
                    android:layout_width="@dimen/size_arrows_width"
                    android:layout_height="@dimen/size_arrows_height"
                    android:src="@drawable/blue_n"/>

                <ImageView
                    android:id="@+id/imageview_arrow_02"
                    android:layout_width="@dimen/size_arrows_width"
                    android:layout_height="@dimen/size_arrows_height"
                    android:src="@drawable/blue_ne"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_center_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_arrow_10"
                    android:layout_width="@dimen/size_arrows_width"
                    android:layout_height="@dimen/size_arrows_height"
                    android:src="@drawable/blue_v"/>

                <TextView
                    android:id="@+id/textview_info"
                    android:layout_width="@dimen/size_arrows_width"
                    android:layout_height="@dimen/size_arrows_height"
                    android:text="O"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="50sp"
                    android:textAlignment="center"/>

                <ImageView
                    android:id="@+id/imageview_arrow_12"
                    android:layout_width="@dimen/size_arrows_width"
                    android:layout_height="@dimen/size_arrows_height"
                    android:src="@drawable/blue_e"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_center_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageview_arrow_20"
                    android:layout_width="@dimen/size_arrows_width"
                    android:layout_height="@dimen/size_arrows_height"
                    android:src="@drawable/blue_sv" />

                <ImageView
                    android:id="@+id/imageview_arrow_21"
                    android:layout_width="@dimen/size_arrows_width"
                    android:layout_height="@dimen/size_arrows_height"
                    android:src="@drawable/blue_s" />

                <ImageView
                    android:id="@+id/imageview_arrow_22"
                    android:layout_width="@dimen/size_arrows_width"
                    android:layout_height="@dimen/size_arrows_height"
                    android:src="@drawable/blue_se" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/button_connect"
                    android:layout_width="@dimen/size_bluetooth_width"
                    android:layout_height="@dimen/size_bluetooth_height"
                    android:text="CONNECT"/>

                <Button
                    android:id="@+id/button_open"
                    android:layout_width="@dimen/size_bluetooth_width"
                    android:layout_height="@dimen/size_bluetooth_height"
                    android:text="ON"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button_left"
                android:layout_width="@dimen/size_left_right_width"
                android:layout_height="@dimen/size_left_right_height"
                android:layout_marginTop="@dimen/size_left_right_margintop"
                android:text="LEFT" />

            <Button
                android:id="@+id/button_right"
                android:layout_width="@dimen/size_left_right_width"
                android:layout_height="@dimen/size_left_right_height"
                android:layout_marginTop="@dimen/size_left_right_margintop"
                android:text="RIGHT" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>